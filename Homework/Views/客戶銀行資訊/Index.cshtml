@model IEnumerable<Homework.Models.客戶銀行資訊>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@if (TempData["客戶銀行資訊Item"] != null && TempData["msg"] != null)
{
    var item = TempData["客戶銀行資訊Item"] as Homework.Models.客戶銀行資訊;
    var msg = TempData["msg"].ToString();
    <pre>@item.帳戶名稱 @msg</pre>
}
<p>
    @Html.ActionLink("新增", "Create", null, new { @class = "btn btn-info" })
    @Html.ActionLink("查詢", "Query", null, new { @class = "btn btn-success" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.ActionLink("銀行名稱", "Index", new { sortOrder = ViewBag.銀行名稱SortParam })
        </th>
        <th>
            @Html.ActionLink("銀行代碼", "Index", new { sortOrder = ViewBag.銀行代碼SortParam })
        </th>
        <th>
            @Html.ActionLink("分行代碼", "Index", new { sortOrder = ViewBag.分行代碼SortParam })
        </th>
        <th>
            @Html.ActionLink("帳戶名稱", "Index", new { sortOrder = ViewBag.帳戶名稱SortParam })
        </th>
        <th>
            @Html.ActionLink("帳戶號碼", "Index", new { sortOrder = ViewBag.帳戶號碼SortParam })
        </th>
        <th>
            @Html.ActionLink("客戶名稱", "Index", new { sortOrder = ViewBag.客戶名稱SortParam })
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.銀行名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.銀行代碼)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.分行代碼)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.帳戶名稱)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.帳戶號碼)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.客戶資料.客戶名稱)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }, new { @class = "btn btn-default" }) 
            @Html.ActionLink("Details", "Details", new { id=item.Id }, new { @class = "btn btn-default" }) 
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { onclick = "return confirm('確定要刪除資料?');", @class = "btn btn-default" })
        </td>
    </tr>
}

</table>
